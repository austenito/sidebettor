<div class="container_16">  
  <div class="grid_2">Title:</div>
  <div class="grid_14"><%= @bet.title %></div>      
  <div class="grid_2">Prize:</div>  
  <div class="grid_14"><%= @bet.prize.name %></div>    
  <div class="grid_2">Creator:</div>  
  <div class="grid_14"><%= @bet.user.login %></div>  
  <div class="grid_2">Challenger:</div>  
  <div class="grid_14"><%= @bet.get_challenger.login %></div>  
  <div class="grid_2">Odds:</div>  
  <div class="grid_14"><%= @bet.get_bettor_ratio.ratio %>:<%= @bet.get_challenger_ratio.ratio %></div>
  <div class="grid_2">Conditions:</div>  
  <div class="grid_14"><%= @bet.get_bettor_condition.condition %></div>
  <div class="grid_14 prefix_2"><%= @bet.get_challenger_condition.condition %></div>

  <% form_for @bet_status do |bet_status_form| %>
    <div class="grid_16">
    <p>Winner:<%= bet_status_form.collection_select :winner_id, @users, :id, :login %></p>        
    </div>
    <div class="grid_2"><%= bet_status_form.submit "Complete Bet" %></div>    
    <div class="grid_2"><%= bet_status_form.submit "Cancel" %></div>    
  <% end %>
</div>